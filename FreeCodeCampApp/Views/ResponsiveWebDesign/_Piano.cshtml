<div class="modal-header">
    <h5 class="modal-title" id="projectPiano">Learn Responsive Web Design by Building a Piano</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body custom-piano">
    <div id="piano">
        <img class="logo-piano" src="https://cdn.freecodecamp.org/platform/universal/fcc_primary.svg" alt="freeCodeCamp Logo" />
        <div class="keys">
            <div class="key"></div>
            <div class="key black--key"></div>
            <div class="key black--key"></div>
            <div class="key"></div>
            <div class="key black--key"></div>
            <div class="key black--key"></div>
            <div class="key black--key"></div>

            <div class="key"></div>
            <div class="key black--key"></div>
            <div class="key black--key"></div>
            <div class="key"></div>
            <div class="key black--key"></div>
            <div class="key black--key"></div>
            <div class="key black--key"></div>

            <div class="key"></div>
            <div class="key black--key"></div>
        </div>
    </div>
</div>

<style>
    .custom-piano {
        box-sizing: border-box;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2%;
    }

    *, *::before, *::after {
        box-sizing: inherit;
    }

    #piano {
        background-color: #00471b;
        width: 80vw;
        max-width: 992px;
        height: 290px;
        margin: 5vh auto;
        padding: 90px 20px 0 20px;
        position: relative;
        border-radius: 10px;
        overflow: hidden;
    }

    .keys {
        background-color: #040404;
        width: 95%;
        height: 180px;
        padding-left: 2px;
        display: flex;
        justify-content: space-between;
    }

    .key {
        background-color: #ffffff;
        position: relative;
        width: 41px;
        height: 175px;
        margin: 2px;
        border-radius: 0 0 3px 3px;
        flex-shrink: 0;
    }

        .key.black--key::after {
            background-color: #1d1e22;
            content: "";
            position: absolute;
            left: -18px;
            width: 32px;
            height: 100px;
            border-radius: 0 0 3px 3px;
        }

    .logo-piano {
        width: 200px;
        position: absolute;
        top: 23px;
        left: 50%;
        transform: translateX(-50%);
    }

    .hidden {
        display: none;
    }
</style>

<script>
    function adjustKeysVisibility() {
        const piano = document.getElementById('piano');
        const keys = document.querySelectorAll('.keys .key');
        let availableWidth = piano.clientWidth;
        let keyWidth = 45;
        let maxVisibleKeys = Math.floor(availableWidth / keyWidth);

        keys.forEach((key, index) => {
            if (index < maxVisibleKeys) {
                key.classList.remove('hidden');
            } else {
                key.classList.add('hidden');
            }
        });
    }

    window.addEventListener('resize', adjustKeysVisibility);
    window.addEventListener('load', adjustKeysVisibility);
</script>
