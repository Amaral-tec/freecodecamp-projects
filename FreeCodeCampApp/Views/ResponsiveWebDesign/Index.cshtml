@using FreeCodeCampApp.Models.Enums
@{
    ViewData["Title"] = "Projects";
}

<div class="hero">
    <h4>Projects</h4>

    <div class="accordion" id="accordionExample">
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingOne">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    Responsive Web Design
                </button>
            </h2>
            <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    <button type="button" class="list-group-item list-group-item-action" onclick="OpenProject(@((int)Projects.CatPhotoApp))">Learn HTML by Building a Cat Photo App</button>
                    <button type="button" class="list-group-item list-group-item-action" onclick="OpenProject(@((int)Projects.CafeMenu))">Learn Basic CSS by Building a Cafe Menu</button>
                    <button type="button" class="list-group-item list-group-item-action" onclick="OpenProject(@((int)Projects.SetOfColoredMarkers)">Learn CSS Colors by Building a Set of Colored Markers</button>
                    <button type="button" class="list-group-item list-group-item-action" onclick="OpenProject(@((int)Projects.RegistrationForm))">Learn HTML Forms by Building a Registration Form</button>
                    <button type="button" class="list-group-item list-group-item-action list-group-item-info" onclick="OpenProject(5)">Certification Project: Survey Form</button>

                    <button type="button" class="list-group-item list-group-item-action" onclick="OpenProject(@((int)Projects.RothkoPainting))">Learn the CSS Box Model by Building a Rothko Painting</button>
                    <button type="button" class="list-group-item list-group-item-action" onclick="OpenProject(@((int)Projects.PhotoGallery))">Learn CSS Flexbox by Building a Photo Gallery</button>
                    <button type="button" class="list-group-item list-group-item-action" onclick="OpenProject(@((int)Projects.NutritionLabel))">Learn Typography by Building a Nutrition Label</button>
                    <button type="button" class="list-group-item list-group-item-action" onclick="OpenProject(@((int)Projects.Quiz))">Learn Accessibility by Building a Quiz</button>
                    <a type="button" class="list-group-item list-group-item-action list-group-item-info" href="https://amaral-tec.github.io/responsive-tribute-page-template/" target="_blank">
                        Certification Project: Tribute Page
                    </a>


                    <button type="button" class="list-group-item list-group-item-action" onclick="OpenProject(@((int)Projects.BalanceSheet))">Learn More About CSS Pseudo Selectors by Building A Balance Sheet</button>
                    <button type="button" class="list-group-item list-group-item-action" onclick="OpenProject(@((int)Projects.CatPainting))">Learn Intermediate CSS by Building a Cat Painting</button>
                    <button type="button" class="list-group-item list-group-item-action" onclick="OpenProject(@((int)Projects.Piano)">Learn Responsive Web Design by Building a Piano</button>
                    <a type="button" class="list-group-item list-group-item-action list-group-item-info" href="https://amaral-tec.github.io/responsive-technical-documentation-page-template/" target="_blank">
                        Certification Project: Technical Documentation Page
                    </a>


                    <button type="button" class="list-group-item list-group-item-action" onclick="OpenProject(@((int)Projects.CitySkyline))">Learn CSS Variables by Building a City Skyline</button>
                    <button type="button" class="list-group-item list-group-item-action" onclick="OpenProject(@((int)Projects.Magazine))">Learn CSS Grid by Building a Magazine</button>
                    <a type="button" class="list-group-item list-group-item-action list-group-item-info" href="https://amaral-tec.github.io/responsive-product-landing-page-template/" target="_blank">
                        Certification Project: Product Landing Page
                    </a>

                    <button type="button" class="list-group-item list-group-item-action" onclick="OpenProject(18)">Learn CSS Animation by Building a Ferris Wheel</button>
                    @* <button type="button" class="list-group-item list-group-item-action" onclick="OpenProject(19)">Learn CSS Transforms by Building a Penguin</button> *@
                    @* <button type="button" class="list-group-item list-group-item-action" onclick="OpenProject(20)">Certification Project: Personal Portfolio Webpage</button> *@
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="projectModal" tabindex="-1" aria-labelledby="projectModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content"></div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script>
    function OpenProject(project) {
        $.ajax({
            type: "GET",
            url: '/ResponsiveWebDesign/OpenProject?projects=' + project,
            success: function (data) {
                let $modal = $("#projectModal");
                $modal.find('.modal-content').html(data);
                $modal.modal("show");
            },
            error: function (data) {
                alert(data.responseJSON.mensagem);
            }
        });
    }
</script>