    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

<script>
    function OpenProject(id) {
        $.ajax({
            type: "GET",
            url: '/Projects/OpenProject?id=' + id,
            success: function (data) {
                $("#modalContent").html(data);
                $("#projectModal").modal("show");
            },
            error: function (data) {
                alert(data.responseJSON.mensagem);
            }
        });
    }
</script>